<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  {%include "components/navbar.html.jinja"%}

    <div class=" card mt-5 w-75 mx-auto">

        <div class="card-body u-bg-card-color">
        <h5 class="card-text text-center u-card-text-color-py">Update</h5>
          <p class="card-title u-card-text-color-sd">Username </p>
          <p class="card-text u-card-text-color-sd">"What happened"</p>
          <p class="card-text small-font u-card-text-color-sd text-end">Timestamp</p>
        </div>

      </div>
      <div class="text-end">
        <button class="u-button">+</button>
      </div>
      <div class="mx-auto w-75">
        <form method = "post" action="/updates/update">
        <label for = "place" class="u-card-text-color-py">Review A Place Recently Visited:</label>
        <br>
        <select size = "6" name = "place" id = "place">
        {%for location in locations%}
        <option value = "{{location['id']}}">{{location["name"]}}</option>
        {% endfor%}
        </select>
        <br>
        <br>
        <label class="card-title u-card-text-color-py text-left ml-2" for="accessable" name="role">Was this location accessable?</label>
            <br>
            <label for="student" class="u-card-text-color-py">Yes</label>
            <input type="radio" id="viable" name="accessable" value="Yes" required
              value="{{ request.form.get('accessable', '') }}">

            <label for="teacher" class="u-card-text-color-py">No</label>
            <input type="radio" id="non-viable" name="accessable" value="No" required value="{{ request.form.get('accessable', '') }}">
            <br>
            <br>

          <textarea placeholder="Write any changes on the accesibility of a place here:" rows="7" cols="100" 
          name="written_update" value = '{{request.form.get("written_update", "")}}' maxlength = "1500" class="u-textarea"></textarea>
          <br>
          <div class="d-grid justify-content-end">
            <button type="submit" class="btn btn-light mt-3 add-update" action="postupdate">Add Update </button>
          </div>
      </form>
    </div>

     {%for update in updates%}
        <div class="card center" style="width: 22rem;">
          <div class="card-body u-bg-card-color">
            <h4 class="u-card-text-color-py">{{update["name"]}}</h4>
            <br>
            <p class="u-card-text-color-sd">{{update["username"]}}</p>
            <p class="u-card-text-color-sd">{{update["written_update"]}}</p>
            <p class="u-card-text-color-sd">{{update["timestamp"].strftime("%Y-%d-%m")}}</p>
          </div>
        </div>
        {%endfor%}


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>