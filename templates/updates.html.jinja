<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hand In Hand</title>
  <link rel="shortcut icon" href="/static/logos/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/styles.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
   <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
</head>

<body>
  {%include "components/navbar.html.jinja"%}
  <br>

  <div class="container text-center messages rounded u-center wow animate__fadeInUp">
      <div class="col-md-auto">
        <form method = "post" action="/updates/update">
              <h2>
                <label for = "place" class=" text-color-2 fs-5 pt-4 special-gothic-expanded-one-regular">Review A Place Recently Visited:</label>
                </h2>
                <br>
                  
                    <select size = "6" name = "place" id = "place" required class="h-bg-card-color center rounded">

                      {%for location in locations%}
                        <option  value = "{{location['id']}}">{{location["name"]}}</option>
                      {% endfor%}
                    </select>
                    <br>
                    <br>
      </div>
        <div class="row">   
            <div>
                <textarea placeholder="Write about the change of accessibility of a place here:" rows="3" cols="100" 
                name="written_update" value = '{{request.form.get("written_update", "")}}' maxlength = "1500" class="form-control h-bg-card-color center" required></textarea>
            </div>
        </div>
        <br>
        <div class="row">

            
  
        </div>

            <div class="row">   
              <div class="col-sm-4"></div>
                <div class="text-center">
                  <label class="card-title text-color-2 fs-5 pt-1" for="accessible  wow animate__fadeInUp" name="role">Was this location accessible?</label>
                    <br>
                      <label for="student" class="text-color-2 fs-5">Yes</label>
                        <input type="radio" id="viable" name="accessable" value="Yes" value="{{ request.form.get('accessable', '') }}" required>
                          <label for="teacher" class="text-color-2 fs-5">No</label>
                            <input type="radio" id="non-viable" name="accessable" value="No"  value="{{ request.form.get('accessable', '') }}" required>

                </div>
            </div>
          <div class="col-sm-4"></div>

            <div class="p-2">
              <button type="submit" class="btn h-button-color mt-3 s-center" action="postupdate">Add Update </button>
            </div>
            <br>
        </form>
  </div>

<br>

     {%for update in updates%}
     
        <div class="card u-center h-card-head-color container-sm wow animate__fadeInUpBig">
          <div class="card-body h-bg-card-color">
          {%if update["accessable"] == 0 %}
            <h4 class="text-color-2 playwrite-au-sa-uniquifier">{{update["name"]}} ~ Inaccessible</h4>
          {%endif%}
          {%if update["accessable"] == 1 %}
            <h4 class="text-color-2 playwrite-au-sa-uniquifier">{{update["name"]}} ~ Accessible</h4>
          {%endif%}
            <br>
            <p class="text-color-2">{{update["username"]}}</p>
            <p class="text-color-2">{{update["written_update"]}}</p>
            <p class="text-color-2">{{update["timestamp"].strftime("%Y-%d-%m")}}</p>
          </div>
        </div>
      
        {%endfor%}


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      <script src="https://code.responsivevoice.org/responsivevoice.js?key=6AqfGK6s"></script>  <!-- replace with KEY-->
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script> 
function getSelectionText() {
    var text = "";
    if (window.getSelection) {

        text = window.getSelection().toString();
        // for Internet Explorer 8 and below. For Blogger, you should use &amp;&amp; instead of &&.
      } else if (document.selection && document.selection.type != "Control") {
        text = document.selection.createRange().text;
      }
      return text;
    }
    $(document).ready(function () { // when the document has completed loading
      $(document).mouseup(function (e) { // attach the mouseup event for all div and pre tags
        setTimeout(function () { // When clicking on a highlighted area, the value stays highlighted until after the mouseup event, and would therefore stil be captured by getSelection. This micro-timeout solves the issue. 
          responsiveVoice.cancel(); // stop anything currently being spoken
          responsiveVoice.speak(getSelectionText()); //speak the text as returned by getSelectionText
        }, 1);
      });
    });
  </script>

    <script>
        var wow = new WOW({
            boxClass: 'wow',
            animateClass: 'animate__animated'
        })
        wow.init();
    </script>
    <br>
</body>

</html>