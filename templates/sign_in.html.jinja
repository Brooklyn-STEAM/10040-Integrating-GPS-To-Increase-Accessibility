<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hand In Hand</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body style="background-color:rgb(56, 4, 111)">
{% include "components/navbar.html.jinja"%}
  <div class="container mt-2">
    {%for message in get_flashed_messages() %}
    <div class="alert alert-info" role="alert">
      {{message}}
    </div>
    {% endfor %}
    <form action="/sign_in" method="post">

      <div class="container">
        <div class="row">
          <div class="col-4"></div>
          <div class="col-4">
          <h2 class = "text-color text-center">Sign In</h2>
            <h4 class="card-title text-color text-left ml-2 mt-3">Username:</h4>
            <input type="text" class="form-control " name="username" placeholder="ne3d#4#HaNd?" required>
            <br>

            <h4 class="card-title text-color text-left ml-2">Password:</h4>
            <input type="password" class="form-control" name="password" placeholder="Password" required>
            <br>

            <div class="d-grid gap-2 col-4 mx-auto">
              <input class="btn h-button-color btn-lg" type="submit" value="Sign In">
            </div>
            <input name="send-to" value="" hidden>

            <br>
            <br>
            <h5 class="text-color text-center">Dont Have An Account?</h5>
            <br>
            <div class="d-grid gap-2 col-4 mx-auto">
              <a class="btn h-button-color btn-md" type="submit" value="Sign Up" href="/sign_up">Sign Up!</a>
            </div>
          </div>
          <div class="col-4"></div>

        </div>
    </form>
  </div>
</body>

</html>