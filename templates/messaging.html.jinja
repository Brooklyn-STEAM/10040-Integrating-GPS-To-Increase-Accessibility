    <form method="post" action="/send">

        <input name="to_user" value="{{request.view_args['user_id']}}" hidden>
        <br>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    {%for message in messages%}
                    {%if message.from_user == current_user.id%}
                    <blockquote class="blockquote">
                        <p class = "m-l" style="color: rgb(14, 86, 195);">{{message["written_message"]}}</p>
                    </blockquote>
                    {%else%}
                    <blockquote class="blockquote">
                        <p style="color: rgb(255, 255, 255);">{{message["written_message"]}}</p>
                    </blockquote>
                    {%endif%}
                    {%endfor%}

                    
                    <label for="user_review" class="form-label h-card-text-color-sd"></label>
                    <textarea placeholder="Send Your Messsage Here..." name="written_message" class="form-control"
                        id="customer_review" rows="3" col="20" maxlength="500" required></textarea>
                    <button type="submit" class="btn h-button-color mt-3 w-100">Post</button>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </form>


